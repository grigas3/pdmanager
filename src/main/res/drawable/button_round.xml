<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#5FB404" android:startColor="#5FB404"/>

            <stroke android:width="5dp" android:color="#AAA"/>

            <corners android:radius="6dp"/>
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#298A08" android:startColor="#298A08"/>

            <stroke android:width="5dp" android:color="#FFF"/>

            <corners android:radius="6dp"/>
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
    </item>
</selector>