<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#2E64FE" android:startColor="#2E64FE"/>

            <stroke android:width="5dp" android:color="#AAA"/>

            <corners android:radius="1dp"/>
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#0040FF" android:startColor="#0040FF"/>

            <stroke android:width="5dp" android:color="#FFF"/>

            <corners android:radius="1dp"/>
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
    </item>
</selector>