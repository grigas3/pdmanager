<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/black"
              android:gravity="center_horizontal|center_vertical"
              android:orientation="vertical"
              android:padding="10dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/case1bis"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_pal_black"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/case1"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_pal_white"
            android:scaleType="fitXY"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/case2bis"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_pal_black"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/case2"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_pal_white"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/pal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:text="TEXT"
            android:textColor="#FFF"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/case3bis"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_pal_black"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/case3"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_pal_white"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/viewer"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/case4bis"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_pal_black"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/case4"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_pal_white"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/case5bis"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_pal_black"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/case5"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_pal_white"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/case6bis"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_pal_black"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/case6"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_pal_white"
            android:scaleType="fitXY"/>
    </RelativeLayout>

</LinearLayout>