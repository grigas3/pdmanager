<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/patient_thanks_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_title_background"
        android:padding="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <TextView
        android:id="@+id/patient_home_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="20dp"
        android:text="@string/thanksMsg"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_title_background"
        android:visibility="visible"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/happyface"/>
    </RelativeLayout>

</LinearLayout>