<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="85dp"
             android:background="@color/white"
             android:elevation="2dp"
             android:orientation="vertical"
             android:padding="6dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/example_list_item_text_margin_bottom"
            android:layout_marginLeft="@dimen/example_list_item_text_margin_left"
            android:layout_marginRight="@dimen/example_list_item_text_margin_right"
            android:layout_marginTop="@dimen/example_list_item_text_margin_top"
            android:orientation="vertical">



                <TextView
                    android:id="@+id/codeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:text="Code"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    android:text="Text"
                    android:textColor="@color/list_item_text_color"
                    android:textSize="18sp"/>


            </LinearLayout>





    </LinearLayout>


</FrameLayout>