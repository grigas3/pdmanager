<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/black"
              android:gravity="center_horizontal|center_vertical"
              android:orientation="vertical"
              android:padding="10dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/pal_picto_layout_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:gravity="right">

            <ImageButton
                android:id="@+id/box1bis"
                android:layout_width="@dimen/pal_picto_size"
                android:layout_height="@dimen/pal_picto_size"
                android:layout_gravity="left"
                android:background="@drawable/button_pal_black"
                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/box1"
                android:layout_width="@dimen/pal_picto_size"
                android:layout_height="@dimen/pal_picto_size"
                android:layout_gravity="left"
                android:background="@drawable/button_pal_white"
                android:scaleType="fitXY"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/pal_picto_layout_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:gravity="left">

            <ImageButton
                android:id="@+id/box2bis"
                android:layout_width="@dimen/pal_picto_size"
                android:layout_height="@dimen/pal_picto_size"
                android:layout_gravity="right"
                android:background="@drawable/button_pal_black"

                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/box2"
                android:layout_width="@dimen/pal_picto_size"
                android:layout_height="@dimen/pal_picto_size"
                android:layout_gravity="right"
                android:background="@drawable/button_pal_white"

                android:scaleType="fitXY"/>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/box3bis"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_pal_black"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/box3"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_pal_white"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/pal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="30dp"
            android:text="TEXT"
            android:textColor="#FFF"
            android:textSize="40dp"/>

        <ImageButton
            android:id="@+id/box4bis"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_pal_black"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/box4"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_pal_white"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/viewer"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/box5bis"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_pal_black"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/box5"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_pal_white"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/box6bis"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_pal_black"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/box6"
            android:layout_width="@dimen/pal_picto_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_pal_white"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/pal_picto_layout_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:gravity="right">

            <ImageButton
                android:id="@+id/box8bis"
                android:layout_width="@dimen/pal_picto_size"
                android:layout_height="@dimen/pal_picto_size"
                android:layout_gravity="left"
                android:background="@drawable/button_pal_black"
                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/box8"
                android:layout_width="@dimen/pal_picto_size"
                android:layout_height="@dimen/pal_picto_size"
                android:layout_gravity="left"
                android:background="@drawable/button_pal_white"
                android:scaleType="fitXY"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/pal_picto_layout_size"
            android:layout_height="@dimen/pal_picto_size"
            android:layout_alignParentRight="true"
            android:gravity="left">

            <ImageButton
                android:id="@+id/box7bis"
                android:layout_width="@dimen/pal_picto_size"
                android:layout_height="@dimen/pal_picto_size"
                android:layout_gravity="right"
                android:background="@drawable/button_pal_black"
                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/box7"
                android:layout_width="@dimen/pal_picto_size"
                android:layout_height="@dimen/pal_picto_size"
                android:layout_gravity="right"
                android:background="@drawable/button_pal_white"

                android:scaleType="fitXY"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>