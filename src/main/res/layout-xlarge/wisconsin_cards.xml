<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Black"
                android:orientation="vertical"
                android:padding="32dp">

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/White"
        android:textSize="28dp"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLevel"
        android:layout_margin="28dp"
        android:layout_toRightOf="@+id/imgCard"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgStack0"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="12dp"
                android:background="@android:color/white"
                android:src="@drawable/cr1"/>

            <ImageView
                android:id="@+id/imgFeedback0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/green_tick"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgStack1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="12dp"
                android:background="@android:color/white"
                android:src="@drawable/tg2"/>

            <ImageView
                android:id="@+id/imgFeedback1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/green_tick"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgStack2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="12dp"
                android:background="@android:color/white"
                android:src="@drawable/pb3"/>

            <ImageView
                android:id="@+id/imgFeedback2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/green_tick"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgStack3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="12dp"
                android:background="@android:color/white"
                android:src="@drawable/sy4"/>

            <ImageView
                android:id="@+id/imgFeedback3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/green_tick"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgCard"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="32dp"
        android:background="@android:color/white"/>
</RelativeLayout>