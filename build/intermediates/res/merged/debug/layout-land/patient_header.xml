<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:background="@color/white"

            android:elevation="2dp"
            android:padding="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/controlImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/controlBackground"
                    android:src="@drawable/person2"
                    android:scaleType="centerInside" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/example_list_item_text_margin_left"
                android:layout_marginRight="@dimen/example_list_item_text_margin_right"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Line series"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/example_list_item_title_fontsize" />
                    <TextView
                        android:id="@+id/statusView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:gravity="right"
                        android:textColor="#ff2233"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dobView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOB birth"
                        android:textColor="@color/list_item_text_color"
                        android:textSize="@dimen/example_list_item_fontsize" />

                    <TextView
                        android:id="@+id/ywpView"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Years with PD"


                        android:textSize="@dimen/example_list_item_fontsize" />
                    <TextView
                        android:id="@+id/lastVisitView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Visit"
                        android:gravity="right"

                        android:textSize="@dimen/example_list_item_fontsize" />

                </LinearLayout>



            </LinearLayout>
</LinearLayout>

