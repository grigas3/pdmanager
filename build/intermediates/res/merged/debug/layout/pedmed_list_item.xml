<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/example_group_list_item_size"
    android:background="@color/white"
    android:orientation="vertical"
    android:elevation="2dp"
    android:padding="6dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutView"
        android:background="#888888"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/example_list_item_text_margin_left"
            android:layout_marginRight="@dimen/example_list_item_text_margin_right"
            android:layout_marginBottom="@dimen/example_list_item_text_margin_bottom"
            android:layout_marginTop="@dimen/example_list_item_text_margin_top"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/productView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product"
                android:textColor="@color/transparentWhite"
                android:textSize="24sp" />
                <TextView
                    android:id="@+id/pdoseView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Dose"
                    android:textColor="@color/transparentWhite"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/prescrDateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="HOUR"
                    android:textColor="@color/transparentWhite"
                    android:textSize="24sp" />



                </LinearLayout>
            <TextView
                android:id="@+id/instructionsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Instructions"
                android:textColor="@color/transparentWhite"
                android:textSize="@dimen/example_list_item_fontsize" />


        </LinearLayout>

</LinearLayout>





</FrameLayout><!-- From: file:/E:/Rigas/PDManager/Android/Home/PDManager/src/main/res/layout/pedmed_list_item.xml -->