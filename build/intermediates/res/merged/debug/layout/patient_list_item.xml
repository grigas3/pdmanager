<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/example_group_list_item_size"
    android:background="@color/white"
    android:orientation="vertical"
    android:elevation="2dp"
    android:padding="6dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="@dimen/example_group_list_item_size"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/white">

            <ImageView
                android:id="@+id/controlImage"
                android:layout_width="@dimen/example_group_list_item_size"
                android:layout_height="@dimen/example_group_list_item_size"
                android:background="@color/controlBackground"
                android:src="@drawable/person2"
                android:scaleType="centerInside" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/example_list_item_text_margin_left"
            android:layout_marginRight="@dimen/example_list_item_text_margin_right"
            android:layout_marginBottom="@dimen/example_list_item_text_margin_bottom"
            android:layout_marginTop="@dimen/example_list_item_text_margin_top"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

            <TextView
                android:id="@+id/nameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line series"
                android:textColor="@android:color/black"
                android:textSize="@dimen/example_list_item_title_fontsize" />
                <TextView
                    android:id="@+id/statusView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
android:gravity="right"
                    android:textColor="#ff2233"
                    />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dobView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOB birth"
                    android:textColor="@color/list_item_text_color"
                    android:textSize="@dimen/example_list_item_fontsize" />

                <TextView
                    android:id="@+id/ywpView"
                    android:paddingLeft="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Years with PD"


                    android:textSize="@dimen/example_list_item_fontsize" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mrnView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MRN"
                    android:textColor="@color/list_item_text_color"
                    android:textSize="@dimen/example_list_item_fontsize" />

            <TextView
                android:id="@+id/phoneView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Description in few words"
                android:textColor="@color/list_item_text_color"
                android:textSize="@dimen/example_list_item_fontsize" />

                <TextView
                    android:id="@+id/lastVisitView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Visit"
                    android:gravity="right"

                    android:textSize="@dimen/example_list_item_fontsize" />

            </LinearLayout>
            </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/example_group_list_item_badge_left_margin"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/badgeImage"
            android:layout_width="@dimen/example_list_control_badge_size"
            android:layout_height="@dimen/example_list_control_badge_size" />

        <ImageView
            android:id="@+id/badgeOverlay"
            android:layout_width="@dimen/example_list_control_badge_size"
            android:layout_height="@dimen/example_list_control_badge_size"
            android:padding="10dp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/showItemMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_action_tick"
        android:padding="16dp" />

</FrameLayout><!-- From: file:/E:/Rigas/PDManager/Android/Home/PDManager/src/main/res/layout/patient_list_item.xml -->