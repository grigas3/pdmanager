<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pdmanager.pdmanager.Settings">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:text="Band Sensors"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

            <Switch
                android:id="@+id/switchBandSensors"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:checked="true"
                android:enabled="true"
                android:textOff="OFF"
                android:textOn="ON" />

        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/sepManagement1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/buttonConnect"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Device Sensors"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

            <Switch
                android:id="@+id/switchDeviceSensors"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:checked="true"
                android:enabled="true"
                android:textOff="OFF"
                android:textOn="ON" />

        </LinearLayout>
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Sensor Delay"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />
                    <Spinner
                        android:id="@+id/sensorDelaySpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:enabled="true"
                        android:background="@android:color/holo_blue_light"
                        android:spinnerMode="dialog"
                        android:popupBackground="@android:color/holo_green_dark"
                        android:textAlignment="textEnd" />


                </LinearLayout>

            </RelativeLayout>



            <View
                android:id="@+id/sepManagement2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/buttonConnect"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Start Hour"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />

                    <Spinner
                        android:id="@+id/startHourSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:enabled="true"
                        android:background="@android:color/holo_blue_light"
                        android:spinnerMode="dialog"
                        android:popupBackground="@android:color/holo_green_dark"
                        android:textAlignment="textEnd" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Stop Hour"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />
                    <Spinner
                        android:id="@+id/stopHourSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:enabled="true"
                        android:background="@android:color/holo_blue_light"
                        android:spinnerMode="dialog"
                        android:popupBackground="@android:color/holo_green_dark"
                        android:textAlignment="textEnd" />


                </LinearLayout>

            </RelativeLayout>
            <View
                android:id="@+id/sepManagement3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/buttonConnect"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />


        </LinearLayout>

</ScrollView>
</LinearLayout>

