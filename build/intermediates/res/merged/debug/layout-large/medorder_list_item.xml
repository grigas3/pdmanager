<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/example_group_list_item_size"
    android:background="@color/white"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="6dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/example_list_item_text_margin_bottom"
            android:layout_marginLeft="@dimen/example_list_item_text_margin_left"
            android:layout_marginRight="@dimen/example_list_item_text_margin_right"
            android:layout_marginTop="@dimen/example_list_item_text_margin_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/productView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/example_list_item_title_fontsize" />


                <TextView
                    android:id="@+id/instructionsView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Instructions"
                    android:textColor="@color/list_item_text_color"
                    android:textSize="@dimen/example_list_item_fontsize" />


                <TextView
                    android:id="@+id/statusView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Status"
                    android:textColor="#ff2233" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dosesView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="9dp"
                    android:text="12:00/200mg 14:00/200mg"


                    android:textSize="@dimen/example_list_item_fontsize" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prescriberView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="9dp"
                    android:text="Prescriber"


                    android:textSize="@dimen/example_list_item_fontsize" />

                <TextView
                    android:id="@+id/prescrDateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Prescription Date"
                    android:textColor="@color/list_item_text_color"
                    android:textSize="@dimen/example_list_item_fontsize" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/example_group_list_item_badge_left_margin">

        <ImageView
            android:id="@+id/badgeImage"
            android:layout_width="@dimen/example_list_control_badge_size"
            android:layout_height="@dimen/example_list_control_badge_size" />

        <ImageView
            android:id="@+id/badgeOverlay"
            android:layout_width="@dimen/example_list_control_badge_size"
            android:layout_height="@dimen/example_list_control_badge_size"
            android:padding="10dp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/showItemMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="0dp"
        android:padding="16dp"
        android:src="@drawable/ic_action_tick" />

</FrameLayout><!-- From: file:/E:/Rigas/PDManager/Android/Home/PDManager/src/main/res/layout-large/medorder_list_item.xml -->